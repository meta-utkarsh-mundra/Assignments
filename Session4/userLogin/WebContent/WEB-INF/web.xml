<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID" version="2.4">
  <display-name>hellowworlds</display-name>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <display-name>register</display-name>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>register</display-name>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UserLoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>edit_profile</display-name>
    <servlet-name>edit</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UserProfileEditController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>edit</servlet-name>
    <url-pattern>/editProfileInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>update_profile</display-name>
    <servlet-name>update</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UpdateUserProfileDataController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/updateInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>show friend</display-name>
    <servlet-name>friend</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UserFriendDataController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>friend</servlet-name>
    <url-pattern>/friends</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>logout</display-name>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UserControllerLogout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>image</display-name>
    <servlet-name>image</servlet-name>
    <servlet-class>com.metacube.userLogin.controller.UserImageController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>image</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>com.metacube.userLogin.filters.UserDetailsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/register</url-pattern>
  </filter-mapping>
</web-app>